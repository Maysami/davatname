<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/welcome_round_shadowcolor" />

            <corners android:radius="15dp" />

            <stroke
                android:width="2.5dp"
                android:color="@color/welcome_round_shadowcolor" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/welcome_round_color" />

            <corners android:radius="15dp" />

            <stroke
                android:width="10dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>